<% @posts.each do |post| %>
    <div class="post">
        <%= post.title %><br>
        <%= post.text %><br>
        <td><%= link_to 'Show', post_path(post) %></td>
        <td><%= link_to 'Delete', post_path(post),
            method: :delete,
            data: { confirm: 'TBH?' } %></td>
    </div>
<% end %>
