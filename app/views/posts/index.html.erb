<h1>POSTY TBH</h1>

<table>
    <tr>
        <th>TYTUŁ</th>
        <th>TREŚĆ</th>
    </tr>
    <% @posts.each do |post| %>
        <tr>
            <td><%= post.title %></td>
            <td><%= post.text %></td>
            <td><%= link_to 'Show', post_path(post) %></td>
        </tr>
    <% end %>
</table>
